//program to print pattern
#include<stdio.h>
void main()
{
	int i,n,j; // n represents no of lines
	scanf("%d",&n);
	// print spaces ascending order and descending order  and then \n
	for(i=1;i<=n;i++)
	{
		for(j=1;j<=n-i;j++)
		{
			printf(" ");
		}
		for(j=1;j<=i;j++)
		{
			printf("*");
		}
		for(j=i-1;j>=1;j--)
		{
			printf("*");
		}
		printf("\n");
	}
}
